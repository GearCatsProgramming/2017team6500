package org.usfirst.frc.team6500.robot.subsystems;

import org.usfirst.frc.team6500.robot.JoystickPair;

import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.XboxController;
import edu.wpi.first.wpilibj.buttons.Button;
import edu.wpi.first.wpilibj.buttons.JoystickButton;
import edu.wpi.first.wpilibj.command.Subsystem;

/**
 *
 */
public class Control extends Subsystem {

    // Put methods for controlling this subsystem
    // here. Call these from Commands.
	
	public String controlType = "Joystick";
	
	public Joystick controllerL, controllerR;
	public XboxController controllerX;
	
	public void initSticks(int idL) {
		this.controllerL = new Joystick(idL);
	}
	
	public void controlType(boolean isXbox){
		if (isXbox) {
			this.controlType = "XBox";
		}else{
			this.controlType = "Joystick";
		}
	}
	
	public String getCurrentCT(){
		return this.controlType;
	}
	
	public Joystick getLeftController() {
		return this.controllerL;
	}
	
	public Joystick getRightController() {
		return this.controllerR;
	}
	
	public XboxController getXboxController() {
		return this.controllerX;
	}
	
	public JoystickPair getJoysticks() {
		return new JoystickPair(this.controllerL, this.controllerR);
	}

    public void initDefaultCommand() {
        // Set the default command for a subsystem here.
        //setDefaultCommand(new MySpecialCommand());
    }
}

