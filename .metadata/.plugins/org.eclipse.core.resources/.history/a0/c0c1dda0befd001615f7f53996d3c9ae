package org.usfirst.frc.team6500.robot;

import edu.wpi.first.wpilibj.Spark;
import edu.wpi.first.wpilibj.command.Subsystem;

/**
 *
 */
public class DriveTrain extends Subsystem {

    // Put methods for controlling this subsystem
    // here. Call these from Commands.
	
	public static Spark fright, bright, fleft, bleft;
	static double rightpower;
	static double leftpower;
	
	public static String driveMode = "Arcade";
	
	public void setLeft(double power){
		fleft.set(power);
		bleft.set(power);
	}
	
	public void setRight(double power){
		fleft.set(power);
		bleft.set(power);
	}
	
	public void arcadeDrive(double yval, double xval) {
		if (yval > 0.0) {
			
		}else{
			
		}
	}
	
	public void toggleDT(){
		if (driveMode == "Arcade"){
			driveMode = "Tank";
		}else{
			driveMode = "Arcade";
		}
	}
	
	public void tankDrive(double leftval, double rightval) {
		setLeft(leftval);
		setRight(rightval);
	}

    public void initDefaultCommand() {
        if (driveMode == "Arcade") {
        	setDefaultCommand(new driveTypeArcade());
        }else{
        	setDefaultCommand(new driveTypeTank());
        }
    }
}

