//		}
//		if (rightcontroller.getBumper(Hand.kRight)) {
//		//if (rightcontroller.getRawButton(4)) {
//			turnindex = -0.5;
//		}
//		if (rightcontroller.getBumper(Hand.kLeft) && rightcontroller.getBButton()) {
//		//if (rightcontroller.getRawButton(5)) {
